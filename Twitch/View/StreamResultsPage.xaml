<Page x:Class="Twitch.View.StreamResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Twitch.View"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:model="using:Twitch.Model"
      mc:Ignorable="d"
      DataContext="{Binding StreamResults, Source={StaticResource Locator}}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding Game.Name}" />

        <GridView Grid.Row="1"
                  ShowsScrollingPlaceholders="True"
                  ItemsSource="{Binding Streams}"
                  DataFetchSize="1"
                  IncrementalLoadingTrigger="Edge"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="GridView_ItemClick">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="model:Stream">
                    <Grid Margin="10" MinWidth="400" MinHeight="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0"
                               x:Name="mImage"
                               Source="{x:Bind Preview}"
                               Stretch="None" />
                        <TextBlock Grid.Row="1"
                                   TextTrimming="CharacterEllipsis"
                                   Text="{x:Bind Channel.Name}" />
                        <TextBlock Grid.Row="2"
                                   TextTrimming="CharacterEllipsis"
                                   Text="{x:Bind Viewers}" />
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
